    <!-- search bar -->
    <div class="container search-bar">
        <div class="search-bar-outer">
            <div class="search-bar-inner">
                <form action="/search">
                    <div class="container m-0 p-0 w-100 d-flex justify-content-between">
                        <h4 class="mb-2">尋找餐廳：</h4>
                    </div>
                    <div class="input-group">
                        <a href="/restaurants/new"><button type="button" class="btn btn-major rounded-pill rounded-end">創造餐廳</button></a>
                        <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                        <div class="input-group-append">
                            <button class="btn btn-major rounded-pill rounded-start" type="submit" id="search-button"><i
                                    class="fas fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- restaurant list -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-10 col-12 mx-auto">
                <div class="row  row-cols-sm-3">
                {{#each restaurantList}}
                    <div class="px-1 mb-3 my-0">
                        <div class="card p-0">
                            <a href="/restaurants/{{this._id}}" class="text-secondary">
                                    <img class="card-img-top figure-img img-fluid"
                                        src="{{this.image}}"
                                        alt="{{this.name}}">
                            </a>
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-1">{{this.name}}</h6>

                                    <div class="restaurant-category mb-1">
                                        <i class="fas fa-utensils pr-2 mr-3" style="margin-right:3px;"></i>{{this.category}}
                                    </div>
                                    <span class="badge rounded-pill text-bg-danger font-weight-normal">
                                        {{this.rating}}
                                        <i class="fas fa-star fa-xxs"></i>
                                    </span>
                                </div>
                            <div class="card-body p-3 text-body-light m-0 pt-0 pb-3 d-flex flex-wrap justify-content-end">
                                <a href="/restaurants/{{this._id}}/edit"><button type="button" class="btn btn-link btn-md m-0 px-0 py-1" style="text-decoration: none;">Edit</button></a>
                                <a href="/restaurants/{{this._id}}"><button type="button" class="btn btn-link btn-md m-0 py-1" style="text-decoration: none;">Details</button></a>
                                <form method="post"><button type="submit" class="btn btn-danger btn-md my-0 py-1">Delete</button></form>
                            </div>
                        </div>
                    </div>
                {{/each}}

                </div>
            </div>
        </div>
    </div>
