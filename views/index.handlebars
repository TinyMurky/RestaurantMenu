    <!-- restaurant list -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-10 col-12 mx-auto">
                <div class="row  row-cols-sm-3">
                {{#each restaurantList}}
                    <div class="px-1 mb-3 my-0">
                        <div class="card p-0">
                            <a href="/restaurants/{{this._id}}" class="text-secondary">
                                    <img class="card-img-top figure-img img-fluid"
                                        src="{{this.image}}"
                                        alt="{{this.name}}">
                            </a>
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-1">{{this.name}}</h6>

                                    <div class="restaurant-category mb-1">
                                        <i class="fas fa-utensils pr-2 mr-3" style="margin-right:3px;"></i>{{this.category}}
                                    </div>
                                    <span class="badge rounded-pill text-bg-danger font-weight-normal">
                                        {{this.rating}}
                                        <i class="fas fa-star fa-xxs"></i>
                                    </span>
                                </div>
                            <div class="card-body p-3 text-body-light m-0 pt-0 pb-3 d-flex flex-wrap justify-content-end">
                                <a href="/restaurants/{{this._id}}/edit"><button type="button" class="btn btn-link btn-md m-0 px-0 py-1" style="text-decoration: none;">Edit</button></a>
                                <a href="/restaurants/{{this._id}}"><button type="button" class="btn btn-link btn-md m-0 py-1" style="text-decoration: none;">Details</button></a>
                                <form method="post" action="/restaurants/{{this._id}}?_method=DELETE"><button type="submit" class="btn btn-danger btn-md my-0 py-1">Delete</button></form>
                            </div>
                        </div>
                    </div>
                {{/each}}

                </div>
            </div>
        </div>
    </div>
