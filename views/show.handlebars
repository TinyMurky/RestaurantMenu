{{#if targetRest}}
    <h1 class="mb-1 restaurant-show-title">{{targetRest.name}}</h1>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-10 mx-auto">

                <p class="mb-1">
                    <span class="text-secondary">
                        <i class="fas fa-utensils pr-2"></i>
                        類別：
                    </span>
                    {{targetRest.category}}
                </p>

                <p class="mb-1">
                    <span class="text-secondary">
                        <i class="fas fa-map-marker-alt pr-2"></i>
                        地址：
                    </span>
                    {{targetRest.location}}
                    <a href="{{targetRest.google_map}}" class="text-secondary" target="_blank">
                        <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                    </a>
                </p>

                <p class="mb-1">
                    <span class="text-secondary">
                        <i class="fas fa-mobile-alt pr-2"></i>
                        電話：
                    </span>
                    {{targetRest.phone}}
                </p>

<!--keep down below line to be at left-->
                <p class="mb-5" style="white-space: pre-wrap;" >
{{targetRest.description}}
                </p>

                <img class="rounded mx-auto d-block mb-4 w-100"
                    src="{{targetRest.image}}" alt="{{targetRest.name}}"
                    style="max-width: 600px;">
            </div>
        </div>
    </div>
{{/if}}
{{#unless targetRest}}
    {{#if errorMessage}}
    <div class="container mt-3">
        <div class="raw">
            <div class="col-12  d-inline-flex flex-column  justify-content-center align-items-center">
                <img class="my-3" src="/image/doge.png" alt="" style="height:150px;width:130px;">
                <h3 style="color:#6C757D;">{{errorMessage}}</h3>
            </div>
        </div>
    </div>
    {{/if}}
{{/unless}}
